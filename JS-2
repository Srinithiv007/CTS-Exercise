// Task 2: Working with Data Types and Operators

// Define event details
const eventName = "Music Fest 2025";
const eventDate = "June 30, 2025";
let availableSeats = 100;

// Display event information using template literals
console.log(`Event: ${eventName}\nDate: ${eventDate}\nAvailable Seats: ${availableSeats}`);

// Simulate a user registering for the event
availableSeats--;  // One seat booked

// Log updated seat count
console.log(`Updated Seats after registration: ${availableSeats}`);

// Another registration
availableSeats++;

// Log updated seat count after cancellation or new seat addition
console.log(`Updated Seats after a seat becomes available: ${availableSeats}`);
